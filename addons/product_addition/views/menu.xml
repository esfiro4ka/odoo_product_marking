<odoo>

    <record id="action_product_form" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="res_model">product_addition.product</field>
        <field name="view_mode">form,tree</field>
    </record>

    <record id="menu_product_form" model="ir.ui.menu">
        <field name="name">Product Form</field>
        <field name="action" ref="product_addition.action_product_form"/>
    </record>

    <record id="action_product_tree" model="ir.actions.act_window">
        <field name="name">Product List</field>
        <field name="res_model">product_addition.product</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="menu_product_tree" model="ir.ui.menu">
        <field name="name">Product List</field>
        <field name="action" ref="product_addition.action_product_tree"/>
    </record>

</odoo>
