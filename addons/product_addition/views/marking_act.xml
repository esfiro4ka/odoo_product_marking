<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_marking_act_form" model="ir.ui.view">
        <field name="name">marking_act.form</field>
        <field name="model">product_addition.marking_act</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="date"/>
                        <field name="status"/>
                        <field name="source_stock" widget="many2one" options="{'create': True}" placeholder="Выберите склад откуда" invisible="status == 'purchase'" required="status != 'purchase'"/>
                        <field name="destination_stock" widget="many2one" options="{'create': True}" placeholder="Выберите склад куда"/>
                        <field name="product_line" widget="many2one" options="{'no_create': True}" placeholder="Выберите товар"/>
                        <field name="quantity" string="Quantity" required="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_marking_act_tree" model="ir.ui.view">
        <field name="name">marking_act.tree</field>
        <field name="model">product_addition.marking_act</field>
        <field name="arch" type="xml">
            <tree>
                <field name="product_line"/>
                <field name="quantity"/>
            </tree>
        </field>
    </record>

</odoo>
