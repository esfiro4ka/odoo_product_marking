<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_marking_act_form" model="ir.ui.view">
        <field name="name">marking_act.form</field>
        <field name="model">product_addition.marking_act</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="date"/>
                        <field name="status"/>
                        <field name="source_stock" widget="many2one" options="{'create': True}" placeholder="Select stock from" invisible="status == 'purchase'" required="status != 'purchase'"/>
                        <field name="destination_stock" widget="many2one" options="{'create': True}" placeholder="Select stock where"/>
                        <field name="product_line" widget="many2one" options="{'no_create': True}" placeholder="Select product"/>
                        <field name="quantity" string="Quantity" required="1"/>
                    </group>
                    <group string="Expense/Revenue">
                        <field name="purchase_cost"/>
                        <field name="logistics_cost"/>
                        <field name="promotion_expense"/>
                        <field name="agent_commission"/>
                        <field name="sales_price"/>
                    </group>
                    <header>
                        <button string="Apply Marking Act" type="object" name="apply_marking_act" class="oe_highlight"/>
                    </header>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_marking_act_tree" model="ir.ui.view">
        <field name="name">marking_act.tree</field>
        <field name="model">product_addition.marking_act</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="product_line"/>
            </tree>
        </field>
    </record>

</odoo>
